<UserControl x:Class="OngDonacionesWpf.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Background="#f2f2f2">

		<StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

			<TextBlock Text="Menú Principal"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

			<Button Content="Donantes"
                    Width="180"
                    Height="40"
                    FontSize="16"
                    Margin="0,5"/>

			<Button Content="Proyectos"
                    Width="180"
                    Height="40"
                    FontSize="16"
                    Margin="0,5"/>

			<Button Content="Donaciones"
                    Width="180"
                    Height="40"
                    FontSize="16"
                    Margin="0,5"/>

			<Button Content="Destino de Fondos"
                    Width="180"
                    Height="40"
                    FontSize="16"
                    Margin="0,5"/>

			<Button Content="Recibos"
                    Width="180"
                    Height="40"
                    FontSize="16"
                    Margin="0,5"/>
		</StackPanel>

	</Grid>
</UserControl>
